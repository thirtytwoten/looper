<style>
#prompt {
  position: absolute;
  top: 100px;
  left: 50%;
  margin-left: -200px;
  width: 400px;
  background-color: #eee;
  z-index: 2;
  padding: 10px;
}
</style>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js"></script>
<div id="prompt">
  <div class="input-group">
      <input id="username" type="text" class="form-control" placeholder="please enter a username" autocomplete="off">
      <span class="input-group-btn">
        <input id="enter" class="btn btn-primary" type="submit" value="enter">
      </span>
    </div>
</div>
<svg width="960" height="600"></svg>

<script>
$(document).ready( function(){

  $('#enter').click( function(){
    userName = $('#username').val();
    location.href=`./sess/${userName}`;
  });

});
</script>
